{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES6",
    "sourceMap": true,
    "lib": [
      "ES6",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "dom",
      "DOM.Iterable"
    ],
    "allowJs": true,
    "outDir": "/dist",
    "strict": true,
    "moduleResolution": "Node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@*": ["src/*"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
